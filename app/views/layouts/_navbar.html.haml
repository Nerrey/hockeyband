%header
  #stuck_container
    .container
      .row
        .grid_12
          %h1
            %span.title{style: ""}
              Hockey
            %span.title.red{style: ""}
              band
            / = link_to root_path do
            /   %img{:alt => "Your Happy Family", height: 48, :src => asset_path("/images/logobw-sm.png")}/
          .menu_block
            %nav.horizontal-nav.full-width.horizontalNav-notprocessed
              %ul.sf-menu
                %li#main
                  = link_to "Главная", root_path
                / %li#news
                /   = link_to "Новости", news_path
                %li#team
                  = link_to "Тренировки", trainings_path
                %li#team
                  = link_to "Команда", our_team_path
                / %li#blog
                /   = link_to "Статьи", blog_path
                %li#contacts
                  = link_to "Контакты", contacts_path
            .clear
          .clear
        .clear
:javascript
  $(document).ready(function(){
    $(".sf-menu li").removeClass("current");
    $(".sf-menu ##{params[:action]}").addClass("current");
  }); 
