%header
  #stuck_container
    .container
      .row
        .grid_12
          %h1
            = link_to root_path do
              %img{:alt => "Your Happy Family", :src => asset_path("/images/logo.png")}/
          .menu_block
            %nav.horizontal-nav.full-width.horizontalNav-notprocessed
              %ul.sf-menu
                %li#main
                  = link_to "Главная", root_path
                %li#news
                  = link_to "Новости", news_path
                %li#team
                  = link_to "Команда", team_path
                %li#blog
                  = link_to "Статьи", blog_path
                %li#contacts
                  = link_to "Контакты", contacts_path
            .clear
          .clear
        .clear
:javascript
  $(document).ready(function(){
    $(".sf-menu li").removeClass("current");
    $(".sf-menu ##{params[:action]}").addClass("current");
  }); 