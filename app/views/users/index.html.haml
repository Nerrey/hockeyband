- model_class = User
.page-header
  %h1 Пользователи
%table.table.table-striped
  %thead
    %tr
      %th #
      %th Email
      %th Имя
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.id, edit_user_path(user)
        %td= user.email
        %td= user.name
        %td.pull-right
          = link_to "Изменить", edit_user_path(user), :class => 'btn btn-default btn-xs'
          = link_to "Удалить", user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to "Создать", new_user_path, :class => 'btn btn-primary'
